<?xml version="1.0" encoding="utf-8"?>
    <com.zhy.autolayout.AutoLinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/round_imageview"
            android:layout_width="match_parent"
            android:layout_height="400px"
            android:scaleType="centerCrop"
            android:src="@drawable/fengjing"
            app:riv_corner_radius_top_left="4dp"
            app:riv_corner_radius_top_right="4dp"
            app:riv_oval="false"
            />


        <TextView
            android:id="@+id/lable_item_text"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:background="@drawable/shape_lable_text_bg"
            android:gravity="center_vertical"
            android:paddingLeft="30px"
            android:text="旅游推荐"
            android:textColor="@color/text_light"
            android:textSize="28px"/>
    </com.zhy.autolayout.AutoLinearLayout>
